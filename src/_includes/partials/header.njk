<header>
  <a href="#main-content" id="visually-hidden">Skip to main content</a>
  <a href='#' id="stt" title="scroll to top"></a>
  <div class="brand-link">
    <a href="/" class="home">{% raw %}{{ 11tybundle.dev }}{% endraw %}</a>
    {# <a href="https://www.zachleat.com/web/independent-sustainable-11ty/" class="announce">Make 11ty Fully Independent and Sustainable</a> #}
  </div>

{#
  Note: the header and footer include different navigation.
#}
  <nav>
    <ul class="brand-nav">
      {% for link in site.mainNavLinks %}
        <li>
          <a href="{{ link.url }}" class="nav-link" {{ link.text | isCurrentPage(page.url) | safe }}>{{ link.text }}<span>{% if link.text === "Blog" %} ({{ collections.posts.length }}){% else %} ({{ bundledata[link.count] | formatNumber }})</span>{% endif %}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>
